	*/

	float volume = 1.0f / delta;
	return Density * volume;
}

#pragma kernel ComputePsi
[numthreads(THREADS,1,1)]
void ComputePsi(int id : SV_DispatchThreadID)
{

	if (id < NumParticles)
	{
		float3 pi = Boundary[id].xyz;
		float psi = Compute(id, pi);

		Boundary[id].w = psi;
	}

}
